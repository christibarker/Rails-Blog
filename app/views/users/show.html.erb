<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p top">
    	<div class="header_two">
         <h4 >Welcome to your Profile </h4>
         <h4><%= @user.name %></h4>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
<!-- end of row -->
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <h4>Account Details</h4>
        <p class="left">Email: <%= @user.email %> </p>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
<!-- end of row -->
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <form action="/create_post" method="POST">
          <div class="form-group">
            <label for="text">New Title</label>
            <input type="text" name="post[title]" class="form-control" id="title" aria-describedby="text" placeholder="title">
          </div>
          <div class="form-group">
            <label for="text">New Post</label>
            <input textarea= "maxlength 150" type= "text" name= "post[content]" class="form-control" id="content" placeholder="post">
          </div>
          <button type="submit" id="button_three" class="btn btn-primary">Submit</button>
        </form>
      </div>
     </div>
   <div class="col">
   </div>
  </div>
  <!-- end of row -->
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
        <h4>Your Posts</h4>
        <div class="posts padding left">
          <div>
            <% @user.posts.each do |post| %>
                <a href="/edit_posts/<%= post.id %>"><img class="format" src="/img/edit.png" alt=""></a>
                <br>
                <a href="/delete_post/<%= post.id %>"><img class="format" src="/img/delete-icon.png" alt=""></a>
                <p class="font"><%= post.title %></p>
                <p class="font"><%= post.content %></p>
              <div class="small">
                  <span>Posted by: <%= @user.name %> </span>
                  <span>on <%= post.created_at.to_formatted_s(:short) %></span>
                  <!-- <span class="reaction-button"></span>comment -->
              </div>
            <% end %>
            </div>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="background_p padding">
        <h4 >Fellow Travelers</h4>
          <div class="size">
            <% @user_all.each do |user| %>
              <p class="font">
                <a href="/show/<%= user.id %>"><%= user.name %></a></p>
            <% end %>
          </div>
      </div>
    </div>
  </div>
<!-- end of row -->
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
        <div>
        <a href="/edit_account" class="btn btn-primary"><strong>Edit Account</strong></a>
      </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>