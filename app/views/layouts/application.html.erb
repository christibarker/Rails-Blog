        <li class="nav-item">
          <a class="nav-link active" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profile">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/blog">Blog</a>
        </li>
        <li class="nav-item">
            <a class="lp-navbar__button lp-navbar__button--fixed btn btn--secondary" href="/sign_in" id="sign_in_button">Sign In</a>
        </li>
        <li class="nav-item">
            <a class="lp-navbar__button lp-navbar__button--fixed btn btn--secondary" href="/create_account" id="create_account_button">Create Account</a>
        </li>
         <% end %>
      </ul>
