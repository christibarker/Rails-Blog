            <p> <% if user_signed_in_? %>
              <%# link_to "Comment", comments_path %>
              <%= form_with model: @comment do |f| %>
              <%# f.label :Comment %>
              <%= f.text_field :comment, placeholder: 'comment' %>
              <%= f.hidden_field :post_id, :value => post.id %>
              <%= f.submit "Add Comment", class: "btn btn-primary" %>
               <p class="small"><%# comment.created_at.to_formatted_s(:short) %></p>
                 <%# @post.comment.each do |comment| %>
                  <p><%# @comment.comment %></p>
                  <p class="small"><%# comment.created_at.to_formatted_s(:short) %></p>
                 <%# end %>
               <% end %>
             <% end %>
           <% end %>
         </div> 
        </div>
