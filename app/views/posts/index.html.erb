<!-- end of row -->
    <div class="row">
      <div class="col">
      </div>
      <div class="col-6 posts background">
        <div class="padding">
        <h4>Blog Posts</h4>
       <!--  <br> -->
          <div class="post_o padding">
           <% @post_all.each do |post| %>
           <%= render post %>
            <div class="posts">
            <span> <% if user_signed_in_? %>
              <%= form_with model: @comment, scope: 'comment' do |f| %>
              <%= f.text_field :comment, placeholder: 'comment', class: "form-control" %>
              <%= f.hidden_field :post_id, :value => post.id %>
             <%= f.submit "add", :disable_with => 'adding...', class: "btn btn-primary"  %>
                         <!-- <span>Posted by: <%# @user.name %> </span> -->
               <span><%#comment.created_at %></span>
                 <% post.comments.each do |comment| %>
                  <p><%= comment.comment %></p>
                  <p><%= comment.created_at.to_formatted_s(:short) %></p>
                  <% if user_signed_in_? && current_user == @user %>
                    <%= link_to "edit", edit_comment_path(post.id), class: "btn btn-primary" %>
                    <% end %>
                 <% end %>
               <% end %>
             <% end %>
            <% end %>
           </div>
         </div> 
        </div>
      </div>
      <div class="col">
      </div>
    </div>
    <!-- end of row -->
