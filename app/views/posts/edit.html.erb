<!-- edit posts -->

<div class="container-fluid">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p top">
    	<div class="header_two">
		    <h2>Edit Posts</h2>
  		  <p>Enter the changes you wish to make in your post.</p>
    	</div>
    </div>
    <div class="col">
    </div>
  </div>
<!-- end of row -->
   <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding">
         <%= form_with model: @post do |f| %>
          <%= f.label :Title %>
          <%= f.text_field :title, placeholder: 'title', class: "form-control", id: "title" %>
           <%= f.label :Content %>
          <%= f.text_field :content, placeholder: 'content' %>
            <%= f.submit "Update Post", id:"button_three", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
<!-- end of row -->
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
        <%= link_to "Delete Post", @post, method: :delete, class: "btn btn-success" %>
      </div>
     </div>
     <div class="col">
     </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6 background_p">
      <div class="padding padding_b">
        <%= link_to "My Profile", current_user, class: "btn btn-primary" %>
      </div>
     </div>
     <div class="col">
     </div>
  </div>
</div>